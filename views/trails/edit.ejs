<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
    <h1><%= title %></h1>
    <form action="/trails/<%= trail._id %>?_method=PUT" method="POST">
        <label for="name-input">Trail Name:</label>
        <input value="<%= trail.name %>" type="text" name="name">
        <label for="mileage-input">Total Mileage:</label>
        <input value="<%= trail.totalMileage %>" type="text" name="totalMileage">
        <label for="exposure-input">Sun Exposure:</label>
        <input value="<%= trail.exposure %>" type="text" name="exposure">
        <label for="dogsAllowed-input">Are Dogs Allowed?</label>
        <input value="<%= trail.dogsAllowed %>" type="text" name="dogsAllowed">
        <button type="submit">Update Trail</button>
    </form>
</main>

<%- include('../partials/footer') %>