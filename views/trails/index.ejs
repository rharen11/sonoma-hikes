<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <div class="trail-index-title">
    <h1>Welcome to Hood Mountain!</h1>
  </div>
  <div class="trail-index-title">
    <h2>Sonoma County, CA</h2>
  </div>
  <div id="trail-index-trails">
  <table>
    <thead>
      <tr>
        <th>Trail</th>
        <th>Total Milage</th>
        <th>Sun Exposure</th>
        <th>Dogs Allowed?</th>
      </tr>
    </thead>
    <tbody>
      <% trails.forEach(trail => { %> 
        <tr>
          <td><%= trail.name %></td>
          <td><%= trail.totalMileage %></td>
          <td><%= trail.exposure %></td>
          <td><%= trail.dogsAllowed %></td>
          <td><a href="/trails/<%= trail._id %>">Details</a></td>
          <td>
            <form action="/trails/<%= trail._id %>?_method=DELETE" method="POST">
              <button>X</button>
            </form>
            <form action="/trails/<%= trail._id %>/edit" method="GET">
                <button>Edit</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
</main>

<%- include('../partials/footer') %>